    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "snarkjs cli",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "cli.js",
            "args": [
                "r1cs",
                "export",
                "json",
                "test/mycircuit/mycircuit.r1cs",
                "test/mycircuit/mycircuit.r1cs.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha all tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}